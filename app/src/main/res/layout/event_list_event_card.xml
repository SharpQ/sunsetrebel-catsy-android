<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:layout_marginTop="50dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryTextColor">


        <ImageView
            android:id="@+id/card_event_icon"
            android:layout_width="150dp"
            android:layout_height="300dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card_event_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/im_event_icon_example_1"
            android:background="@drawable/ui_transparent_rounded_corners"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_event_name"
            android:layout_width="249dp"
            android:layout_height="21dp"
            android:fontFamily="@font/audiowide"
            android:text="TextView"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintBottom_toTopOf="@+id/inputLayoutDateStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_event_icon"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inputLayoutDateStart"
            android:layout_width="202dp"
            android:layout_height="22dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/audiowide"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/inputLayoutLocation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toBottomOf="@+id/card_event_name" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inputLayoutLocation"
            android:layout_width="202dp"
            android:layout_height="22dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/audiowide"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/card_people_number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/inputLayoutDateStart" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/card_people_number"
            android:layout_width="202dp"
            android:layout_height="22dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="27dp"
            android:fontFamily="@font/audiowide"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/inputEditEventDescription"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/inputLayoutLocation" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:layout_gravity="start"
            android:baselineAligned="false"
            android:scaleType="fitCenter"
            android:src="@drawable/im_clock_black_40"
            app:layout_constraintBottom_toTopOf="@+id/imageView5"
            app:layout_constraintEnd_toStartOf="@+id/inputLayoutDateStart"
            app:layout_constraintStart_toEndOf="@+id/card_event_icon"
            app:layout_constraintTop_toBottomOf="@+id/card_event_name" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:layout_gravity="start"
            android:baselineAligned="false"
            android:scaleType="fitCenter"
            android:src="@drawable/im_location_marker_40"
            app:layout_constraintBottom_toTopOf="@+id/imageView6"
            app:layout_constraintEnd_toStartOf="@+id/inputLayoutLocation"
            app:layout_constraintStart_toEndOf="@+id/card_event_icon"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:layout_gravity="start"
            android:layout_marginBottom="28dp"
            android:baselineAligned="false"
            android:scaleType="fitCenter"
            android:src="@drawable/im_crowd_black_40"
            app:layout_constraintBottom_toTopOf="@+id/inputEditEventDescription"
            app:layout_constraintEnd_toStartOf="@+id/card_people_number"
            app:layout_constraintStart_toEndOf="@+id/card_event_icon"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            app:layout_constraintVertical_bias="0.0" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/inputEditEventDescription"
            android:layout_width="234dp"
            android:layout_height="98dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="5dp"
            android:ems="10"
            android:fontFamily="@font/audiowide"
            android:inputType="textPersonName"
            android:lines="10"
            android:maxWidth="10dip"
            android:maxLines="10"
            android:text="Event description"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toTopOf="@+id/event_creator_photo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/card_event_icon"
            app:layout_constraintTop_toBottomOf="@+id/card_people_number" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/card_join_button"
            android:background="@drawable/ui_rounded_corners_light"
            android:layout_width="88dp"
            android:layout_height="42dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="@font/audiowide"
            android:text="JOIN"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_like_button"
            app:layout_constraintTop_toBottomOf="@+id/inputEditEventDescription" />

        <ImageButton
            android:id="@+id/card_like_button"
            android:layout_width="38dp"
            android:layout_height="41dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="5dp"
            android:background="@color/primaryTextColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card_join_button"
            app:layout_constraintStart_toEndOf="@+id/card_share_button"
            app:layout_constraintTop_toBottomOf="@+id/inputEditEventDescription"
            app:srcCompat="@drawable/ic_baseline_favorite_24" />

        <ImageButton
            android:id="@+id/card_share_button"
            android:layout_width="38dp"
            android:layout_height="41dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="44dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="5dp"
            android:background="@color/primaryTextColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card_like_button"
            app:layout_constraintStart_toEndOf="@+id/card_context_button"
            app:layout_constraintTop_toBottomOf="@+id/inputEditEventDescription"
            app:srcCompat="@android:drawable/ic_menu_share" />

        <ImageButton
            android:id="@+id/card_context_button"
            android:layout_width="38dp"
            android:layout_height="41dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:background="@color/primaryTextColor"
            android:scaleType="fitStart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/card_share_button"
            app:layout_constraintStart_toEndOf="@+id/card_event_icon"
            app:layout_constraintTop_toBottomOf="@+id/inputEditEventDescription"
            app:layout_constraintVertical_bias="0.978"
            app:srcCompat="@drawable/im_context_menu_black_40" />

        <ImageView
            android:id="@+id/event_creator_photo"
            android:layout_width="33dp"
            android:layout_height="31dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="210dp"
            android:layout_marginBottom="13dp"
            android:src="@drawable/im_cat_location_sample_35"
            app:layout_constraintBottom_toTopOf="@+id/card_context_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/card_event_icon"
            app:layout_constraintTop_toBottomOf="@+id/inputEditEventDescription" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textInputLayoutEventAccess"
            android:layout_width="194dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/audiowide"
            android:text="TextView"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/card_like_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/event_creator_photo"
            app:layout_constraintTop_toBottomOf="@+id/inputEditEventDescription" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

