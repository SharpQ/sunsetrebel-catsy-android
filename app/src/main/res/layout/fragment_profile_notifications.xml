<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/im_background_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ProfileNotificationsFragment">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_back_to_main"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:drawableStart="@drawable/ic_baseline_keyboard_arrow_left_45"
        android:drawableEnd="@drawable/ic_baseline_supervised_user_circle_30_grey"
        android:paddingEnd="10dp"
        android:textColor="@color/primaryLightColor"
        android:fontFamily="@font/audiowide"
        android:background="?android:selectableItemBackgroundBorderless"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_title_notifications"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintHorizontal_bias="0"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_notifications"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:text="@string/profile_notifications_title"
        android:textColor="@color/primaryTextColor"
        android:textSize="20sp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintHorizontal_weight="0"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/profile_image_notifications"
        app:layout_constraintStart_toEndOf="@id/button_back_to_main"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/profile_image_notifications"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        app:shapeAppearanceOverlay="@style/EventListHostAvatar"
        android:elevation="15dp"
        android:padding="5dp"
        android:layout_marginEnd="@dimen/default_side_margin"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="0.07"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tl_profile"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        app:tabTextColor="@color/primaryTextColor"
        app:tabSelectedTextColor="@color/primaryLightColor"
        app:tabIndicatorColor="@color/primaryLightColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title_notifications"
        app:layout_constraintVertical_bias="0">

        <com.google.android.material.tabs.TabItem
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:text="@string/notifications_tab_title_all"/>

        <com.google.android.material.tabs.TabItem
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:text="@string/notifications_tab_title_events"/>

        <com.google.android.material.tabs.TabItem
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:text="@string/notifications_tab_title_friends"/>
    </com.google.android.material.tabs.TabLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_notifications"
        android:background="@color/black70Transparent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tl_profile"
        android:scrollbars="vertical"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_no_new_notifications"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:enabled="false"
        android:layout_gravity="center_vertical"
        android:fontFamily="@font/audiowide"
        android:gravity="center"
        android:drawableStart="@drawable/im_kitty_no_notifications_64"
        android:text="@string/profile_no_new_notifications_label"
        android:textColor="@color/primaryTextColor"
        android:textSize="18sp"
        android:drawablePadding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/recycler_notifications"
        app:layout_constraintVertical_bias="0.4" />
</androidx.constraintlayout.widget.ConstraintLayout>