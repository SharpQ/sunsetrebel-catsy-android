<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/splashScreenTheme"
    android:fitsSystemWindows="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/rounded_corners"
    android:scaleType = "centerCrop"

    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <fragment
        android:id="@+id/google_map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="412dp"
        android:layout_height="660dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="-2dp" />

    <LinearLayout
        android:id="@+id/linearLayoutCustomView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/textViewOtherDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayoutSearchView"
        android:layout_width="310dp"
        android:layout_height="118dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|center_horizontal|fill_horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="15dp"
        android:gravity="fill_horizontal"
        android:orientation="vertical">


        <SearchView
            android:layout_width="316dp"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="32dp"
            android:alpha="0.7"
            android:background="@drawable/rounded_corners"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/map_filter"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/map_filter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="300dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corners"
            android:padding="9dp"
            android:src="@drawable/ic_filter_icon_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.972"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.645"
            app:tabRippleColor="@null" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar_map_switch"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:layout_alignBottom="@id/google_map"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="1dp"
        android:orientation="horizontal"

        android:showDividers="end">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:alpha="0.9"
            android:background="@color/primaryColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/AppTheme">

            <LinearLayout
                android:id="@+id/switch_map"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:divider="@android:drawable/ic_dialog_map"
                android:dividerPadding="6dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:showDividers="end"
                app:tabRippleColor="@null">

                <TextView
                    android:id="@+id/map_switch"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:drawablePadding="8dp"
                    android:gravity="fill_horizontal"
                    android:paddingLeft="14dp"
                    android:textAllCaps="true"

                    app:tabRippleColor="@null" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/switch_list"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:divider="@drawable/ic_eventlist_40"
                android:dividerPadding="3dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:showDividers="end"
                app:tabBackground="@drawable/toolbar_shape">

                <TextView
                    android:id="@+id/list_switch"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/toolbar_shape"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="16dp"
                    android:textAllCaps="true"
                    app:tabBackground="@android:color/transparent" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/switch_create_event"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:divider="@drawable/ic_add_40"
                android:dividerPadding="8dp"
                android:orientation="horizontal"
                android:padding="2dp"
                android:showDividers="end">

                <TextView
                    android:id="@+id/create_event"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/toolbar_shape"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="16dp"

                    android:textAllCaps="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:divider="@android:drawable/ic_dialog_email"
                android:dividerPadding="5dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:showDividers="end">

                <TextView
                    android:id="@+id/messages"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/toolbar_shape"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="16dp"

                    android:textAllCaps="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/switch_profile"
                android:layout_width="wrap_content"
                android:layout_height="?attr/actionBarSize"
                android:divider="@drawable/ic_cat_profile"
                android:dividerPadding="5dp"
                android:orientation="horizontal"
                android:padding="4dp"
                android:showDividers="end">

                <TextView
                    android:id="@+id/profile_menu"
                    style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/toolbar_shape"
                    android:drawablePadding="15dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="15dp"
                    android:paddingRight="16dp"
                    android:textAllCaps="true" />

            </LinearLayout>

            <TextView

                style="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/toolbar_shape"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:paddingLeft="35dp"

                android:textAllCaps="true" />
        </androidx.appcompat.widget.Toolbar>
    </androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>


