<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/ui_toolbar_shape"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/audiowide"
        android:text="Type event details below"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/card_event_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/audiowide"
        android:background="@drawable/ui_rounded_corners_light"
        android:hint="Event name..."
        android:imeOptions="actionNext"
        android:inputType="text" />

    <androidx.appcompat.widget.AppCompatEditText

    android:id="@+id/card_event_date"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="238dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ui_rounded_corners_light"
        android:fontFamily="@font/audiowide"
        android:hint="Event date..."
        android:imeOptions="actionNext"
        android:inputType="date" />

    <androidx.appcompat.widget.AppCompatEditText

    android:id="@+id/card_event_location"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="165dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/audiowide"
        android:background="@drawable/ui_rounded_corners_light"
        android:hint="Event location..."
        android:imeOptions="actionNext"
        android:inputType="text"/>

    <EditText
        android:id="@+id/card_event_detail_description"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ui_rounded_corners_light"
        android:fontFamily="@font/audiowide"

        android:hint="Event description..."
        android:imeOptions="actionNext"
        android:inputType="textMultiLine|textImeMultiLine" />

    <androidx.appcompat.widget.AppCompatEditText

        android:id="@+id/event_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ui_rounded_corners_light"
        android:fontFamily="@font/audiowide"
        android:hint="Event type..."
        android:imeOptions="actionNext"
        android:inputType="text" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginStart="140dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="140dp"

        android:background="@drawable/ui_rounded_corners_light"
        android:fontFamily="@font/audiowide"
        android:gravity="center|center_vertical|fill_vertical"
        android:text="submit"
        android:textColor="@color/primaryTextColor" />
</RelativeLayout>