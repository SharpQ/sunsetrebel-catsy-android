<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewAddEvent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyBackground"
    android:scrollbars="none"
    android:requiresFadingEdge="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/greyBackground"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        tools:context=".activities.MainActivity"
        android:requiresFadingEdge="none">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textAddEventTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/audiowide"
            android:text="@string/add_event_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:id="@+id/textInputLayoutEventAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEventTitle"
            app:layout_constraintVertical_bias="0.01">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_baseline_supervised_user_circle_30"
                android:drawablePadding="10dp"
                android:editable="false"
                android:fontFamily="@font/audiowide"
                android:gravity="center_vertical"
                android:inputType="none"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/add_event_event_access"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textInputLayoutEventAccess"
            app:layout_constraintVertical_bias="0" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryLightColor"
            android:foregroundTint="@color/primaryLightColor"
            android:src="@drawable/ic_library_add_black_24dp"
            android:tint="@color/primaryLightColor"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="@id/recyclerView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/recyclerView"
            app:layout_constraintVertical_bias="1" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textAddEventTitle"
            app:layout_constraintVertical_bias="0.01">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_event_event_title"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutDateEnd"
            app:layout_constraintVertical_bias="0.01">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_event_location"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <fragment
            android:id="@+id/fragmentMap"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutLocation"
            app:layout_constraintVertical_bias="0"
            tools:context=".fragments.AddEventFrament" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutDateStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/inputLayoutTimeStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recyclerView"
            app:layout_constraintVertical_bias="0">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditDateStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_date_start"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutDateEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/inputLayoutTimeEnd"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutDateStart"
            app:layout_constraintVertical_bias="0">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditDateEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_date_end"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutTimeStart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/inputLayoutDateStart"
            app:layout_constraintTop_toBottomOf="@id/recyclerView"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditTimeStart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_time_start"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutTimeEnd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/inputLayoutDateEnd"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutTimeStart"
            app:layout_constraintVertical_bias="0.0">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditTimeEnd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_time_end"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutEventDescription"
            style="@style/AddEventTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragmentMap"
            app:layout_constraintVertical_bias="0.03">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditEventDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_event_description"
                android:gravity="top"
                android:inputType="textMultiLine|textImeMultiLine"
                android:minLines="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonSubmitNewEvent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="200dp"
            android:layout_gravity="end"
            android:fontFamily="@font/audiowide"
            android:gravity="center|center_vertical|fill_vertical"
            android:text="submit"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEventDescription"
            app:layout_constraintVertical_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
