<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewAddEvent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_background_concert">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="false"
        android:orientation="vertical"
        android:requiresFadingEdge="none">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textAddEventTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_vertical"
            android:fontFamily="@font/audiowide"
            android:text="@string/add_event_title"
            android:textColor="@color/primaryTextColor"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.05" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:id="@+id/inputLayoutEventAccess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEventTitle"
            app:layout_constraintVertical_bias="0.01"
            app:errorTextColor="@color/redError"
            app:boxStrokeErrorColor="@color/redError"
            app:errorIconTint="@color/redError">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableStart="@drawable/ic_baseline_supervised_user_circle_30"
                android:drawablePadding="10dp"
                android:editable="false"
                android:fontFamily="@font/audiowide"
                android:gravity="center_vertical"
                android:inputType="none"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="@string/add_event_event_access"
                android:textSize="15sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageViewAddEventAvatar"
            app:shapeAppearanceOverlay="@style/CornerSize10Percent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:background="@color/blackHalfTransparent"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEventAccess"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/materialTextViewAddImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:enabled="false"
            android:background="@drawable/ui_rounded_corners_grey"
            android:drawableStart="@drawable/ic_library_add_black_24dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/audiowide"
            android:layout_margin="12dp"
            android:padding="10dp"
            android:alpha="0.9"
            android:radius="100dip"
            android:text="@string/add_event_add_image_hint"
            android:textSize="18sp"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/primaryTextColor"
            app:layout_constraintBottom_toBottomOf="@id/imageViewAddEventAvatar"
            app:layout_constraintEnd_toEndOf="@id/imageViewAddEventAvatar"
            app:layout_constraintStart_toStartOf="@id/imageViewAddEventAvatar"
            app:layout_constraintTop_toTopOf="@id/imageViewAddEventAvatar"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintVertical_bias="0.5" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textAddEventTitle"
            app:layout_constraintVertical_bias="0">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditEventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_event_event_title"
                android:inputType="text"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/textViewStartTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/inputLayoutEndTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageViewAddEventAvatar"
            app:layout_constraintVertical_bias="0">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditStartTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_time_start"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/textViewStartTime"
            app:layout_constraintTop_toBottomOf="@id/imageViewAddEventAvatar"
            app:layout_constraintVertical_bias="0">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditEndTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_time_end"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutEventTheme"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEndTime"
            app:layout_constraintVertical_bias="0">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:id="@+id/inputEditEventTheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_event_theme"
                android:clickable="true"
                android:focusable="false"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/textViewLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:endIconMode="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEventTheme"
            app:layout_constraintVertical_bias="0.01">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:drawableEnd="@android:drawable/arrow_down_float"
                android:id="@+id/inputEditLocation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_event_location"
                android:clickable="true"
                android:focusable="false"
                android:inputType="textVisiblePassword|textNoSuggestions" />

        </com.google.android.material.textfield.TextInputLayout>

        <fragment
            android:id="@+id/fragmentMap"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewLocation"
            app:layout_constraintVertical_bias="0"
            tools:context=".fragments.AddEventFrament" />

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutEventMinAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/inputLayoutEventMaxAge"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragmentMap"
            app:layout_constraintVertical_bias="0.02">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/AddEventTextEdit"
            android:id="@+id/inputEditEventMinAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/add_event_event_min_age"
            android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutEventMaxAge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/inputLayoutEventMinAge"
            app:layout_constraintTop_toBottomOf="@id/fragmentMap"
            app:layout_constraintVertical_bias="0.02">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditEventMaxAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_event_event_max_age"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/AddEventTextInputLayout"
            android:id="@+id/inputLayoutEventMaxPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEventMinAge"
            app:layout_constraintVertical_bias="0.02">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/inputEditEventMaxPeople"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/add_event_event_attendees"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/inputLayoutEventDescription"
            style="@style/AddEventTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEventMaxPeople"
            app:layout_constraintVertical_bias="0.03">

            <com.google.android.material.textfield.TextInputEditText
                style="@style/AddEventTextEdit"
                android:id="@+id/textViewEventDescription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/add_event_event_description"
                android:gravity="top"
                android:inputType="textMultiLine|textImeMultiLine"
                android:minLines="2" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            style="@style/DefaultButton"
            android:id="@+id/buttonSubmitNewEvent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="200dp"
            android:text="@string/add_event_create_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/inputLayoutEventDescription"
            app:layout_constraintVertical_bias="0" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
