<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/im_background_onboarding"
    tools:context=".activities.VerifyPhoneActivity">

    <TextView
        android:id="@+id/textVerifyPhoneTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/audiowide"
        android:text="@string/verify_phone_title"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/default_page_title_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07" />

    <TextView
        android:id="@+id/textVerifyPhoneDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_side_margin"
        android:layout_marginEnd="@dimen/default_side_margin"
        android:fontFamily="@font/audiowide"
        android:text="@string/verify_phone_description"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/default_page_descr_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVerifyPhoneTitle"
        app:layout_constraintVertical_bias="0.2" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/InitialFlowTextInputLayout"
        android:id="@+id/inputLayoutSmsCode"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVerifyPhoneDescription"
        app:layout_constraintVertical_bias="0.2">
        <com.google.android.material.textfield.TextInputEditText
            style="@style/InitialFlowTextEdit"
            android:id="@+id/inputEditSmsCode"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/verify_number_hint_code"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <ProgressBar
        android:id="@+id/progressBarVerify"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateDrawable="@drawable/ui_progress_bar"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/buttonVerify"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonResentCode"
        app:layout_constraintVertical_bias="0.5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonVerify"
        style="@style/DefaultButton"
        android:text="@string/verify_button_verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutSmsCode"
        app:layout_constraintVertical_bias="0.95" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonResentCode"
        android:backgroundTint="@color/primaryColor"
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:strokeColor="@color/primaryLightColor"
        android:fontFamily="@font/audiowide"
        android:text="@string/verify_button_resent_code"
        android:textAlignment="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutSmsCode"
        app:layout_constraintVertical_bias="0.1" />

    <TextView
        android:id="@+id/textResetCountdown"
        android:visibility="invisible"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:fontFamily="@font/audiowide"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="@dimen/default_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonResentCode"
        app:layout_constraintTop_toBottomOf="@+id/inputLayoutSmsCode"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintHorizontal_bias="0.01"/>
</androidx.constraintlayout.widget.ConstraintLayout>