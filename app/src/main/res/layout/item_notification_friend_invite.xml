<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="245dp"
    card_view:cardElevation="0dp"
    card_view:cardBackgroundColor="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="245dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_friend_invite_timestamp"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/primaryTextColor"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:longClickable="false"
            android:clickable="false"
            android:singleLine="true"
            android:maxLines="1"
            android:fontFamily="@font/audiowide"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintVertical_bias="0"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_friend_invite_title"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:textColor="@color/primaryTextColor"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAlignment="textStart"
            android:longClickable="false"
            android:clickable="false"
            android:maxLines="2"
            android:fontFamily="@font/audiowide"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_friend_invite_timestamp"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_friend_invite_sender_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/primaryLightColor"
            app:shapeAppearanceOverlay="@style/RoundCorner20pers"
            android:elevation="15dp"
            android:padding="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_friend_invite_title"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintVertical_bias="0"/>

        <com.google.android.material.button.MaterialButton
            style="@style/DefaultOutlinedButton"
            android:id="@+id/button_friend_invite_accept"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/primaryDarkColorTransparent"
            app:strokeColor="@color/successGreenColor"
            app:rippleColor="@color/successGreenColor"
            android:textColor="@color/successGreenColor"
            android:text="@string/notifications_accept_btn"
            app:icon="@drawable/ic_baseline_task_alt_24"
            app:iconTint="@color/successGreenColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_friend_invite_decline"
            app:layout_constraintTop_toBottomOf="@+id/iv_friend_invite_sender_avatar"
            app:layout_constraintVertical_bias="0" />

        <com.google.android.material.button.MaterialButton
            style="@style/DefaultOutlinedButton"
            android:id="@+id/button_friend_invite_decline"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:backgroundTint="@color/primaryDarkColorTransparent"
            app:strokeColor="@color/failRedColor"
            app:rippleColor="@color/failRedColor"
            android:textColor="@color/failRedColor"
            android:text="@string/notifications_decline_btn"
            app:icon="@drawable/ic_baseline_highlight_off_24"
            app:iconTint="@color/failRedColor"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_friend_invite_accept"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_friend_invite_sender_avatar"
            app:layout_constraintVertical_bias="0" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>