<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--BUTTONS-->
    <style name="DefaultButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableLeft">@drawable/im_cat_hearts_32p</item>
        <item name="android:drawableRight">@drawable/im_cat_hearts_32p</item>
    </style>

    <style name="FacebookButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:backgroundTint">@color/facebookBtnColor</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:text">@string/facebook_authentication</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:drawableLeft">@drawable/com_facebook_button_icon</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GoogleButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:backgroundTint">@color/googleBtnColor</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:text">@string/google_authentication</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:drawableLeft">@drawable/ic_google_logo</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="NavBarText">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PlacesSearchBarTheme" parent="MaterialSearchBarLight">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColor</item>
        <item name="mt_dividerColor">@color/searchBarPrimaryColor</item>
        <item name="mt_navIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_searchIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_clearIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_menuIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_backIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_textCursorTint">@color/searchBarPrimaryColor</item>
        <item name="mt_textColor">@color/searchBarPrimaryColor</item>
        <item name="mt_hintColor">@color/searchBarPrimaryColor</item>
        <item name="mt_placeholderColor">@color/searchBarPrimaryColor</item>
        <item name="mt_highlightedTextColor">@color/searchBarPrimaryColor</item>
    </style>

    <style name="TextInputLayoutForAddEvent" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>
</resources>