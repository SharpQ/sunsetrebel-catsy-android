<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--BUTTONS-->
    <style name="DefaultButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableStart">@drawable/ic_main_button_drawable_scale</item>
        <item name="android:drawableEnd">@drawable/ic_main_button_drawable_scale</item>
    </style>

    <style name="FacebookButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:backgroundTint">@color/facebookBtnColor</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:text">@string/facebook_authentication</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:drawableStart">@drawable/com_facebook_button_icon</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="GoogleButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:backgroundTint">@color/googleBtnColor</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:text">@string/google_authentication</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:drawableStart">@drawable/ic_google_logo</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!--EDIT FIELDS-->

    <style name="InitialFlowTextInputLayout">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHighlight">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textCursorDrawable">@color/primaryLightColor</item>
        <item name="hintTextColor">@color/primaryLightColor</item>
        <item name="boxStrokeColor">@color/primaryLightColor</item>
        <item name="android:textSize">16sp</item>
        <item name="errorTextColor">@color/redError</item>
        <item name="boxStrokeErrorColor">@color/redError</item>
        <item name="errorIconTint">@color/redError</item>
    </style>

    <style name="InitialFlowTextEdit">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="boxBackgroundColor">@color/blackHalfTransparent</item>
        <item name="android:background">@color/blackHalfTransparent</item>
        <item name="android:ems">10</item>
    </style>

    <style name="NewEventTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxBackgroundColor">@color/blackHalfTransparent</item>
        <item name="errorTextColor">@color/redError</item>
        <item name="boxStrokeErrorColor">@color/redError</item>
        <item name="errorIconTint">@color/redError</item>
    </style>

    <style name="NewEventTextEdit">
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/primaryTextColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <!--DIALOGS-->

    <style name="DialogTheme" parent="android:Theme.Dialog">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!-- No backgrounds, titles or window float -->
        <item name="android:windowBackground">@color/primaryColor</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="DatePickerDialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorPrimary">@color/primaryLightColor</item>
        <item name="colorAccent">@color/primaryLightColor</item>                   <!--header background-->
        <item name="android:windowBackground">@color/greyBackground</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/primaryLightColor</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/primaryTextColor</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/primaryLightColor</item>    <!--days of the week-->
        <item name="colorControlHighlight">@color/primaryLightColor</item>
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

    <!--TEXT-->

    <style name="NavBarText">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/audiowide</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--SEARCH BARS-->

    <style name="PlacesSearchBarTheme">
        <item name="mt_searchBarColor">@color/searchBarPrimaryColor</item>
        <item name="mt_dividerColor">@color/searchBarPrimaryColor</item>
        <item name="mt_navIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_searchIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_clearIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_menuIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_backIconTint">@color/searchBarPrimaryColor</item>
        <item name="mt_textCursorTint">@color/searchBarPrimaryColor</item>
        <item name="mt_textColor">@color/searchBarPrimaryColor</item>
        <item name="mt_hintColor">@color/searchBarPrimaryColor</item>
        <item name="mt_placeholderColor">@color/searchBarPrimaryColor</item>
        <item name="mt_highlightedTextColor">@color/searchBarPrimaryColor</item>
    </style>

    <!--IMAGES-->

    <style name="ShapeAppearanceAvatarEventList" parent="">
        <item name="cornerSizeTopRight">10%</item>
        <item name="cornerSizeBottomRight">10%</item>
    </style>

    <style name="CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="EventListHostAvatar" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="popup_window_animation">
        <item name="android:windowEnterAnimation">@anim/animate_card_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_card_exit</item>
    </style>
</resources>